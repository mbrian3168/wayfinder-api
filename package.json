{
  "name": "wayfinder-api",
  "version": "9.0.0",
  "private": true,
  "description": "Wayfinder API with OpenAPI generation and docs",
  "license": "MIT",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "openapi:build": "npx ts-node scripts/build-openapi.ts",
    "openapi:lint": "redocly lint openapi.json",
    "openapi:check": "node scripts/check-visibility.js",
    "openapi:types": "openapi-typescript openapi.json -o src/types/openapi.d.ts",
    "vercel-build": "echo 'Vercel build complete - using runtime TypeScript compilation'",
    "build": "npm run vercel-build && npx tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "deploy:test": "node scripts/deploy-test.js",
    "deploy:full": "vercel --prod && npm run deploy:test",
    "validate": "node scripts/validate-api.js && node scripts/validate-schemas.js",
    "test:api": "node scripts/test-api-endpoints.js"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.1.0",
    "@google-cloud/text-to-speech": "^6.2.0",
    "@prisma/client": "^6.13.0",
    "@vercel/blob": "^1.1.1",
    "@vercel/node": "^3.0.21",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.1",
    "firebase-admin": "^12.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@redocly/cli": "^1.16.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.14.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "openapi-typescript": "^7.4.2",
    "prettier": "^3.4.2",
    "prisma": "^6.13.0",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0"
  }
}
